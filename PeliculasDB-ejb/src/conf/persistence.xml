<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PeliculasDB-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/peliculasdb</jta-data-source>
    <class>peliculasDB.entidad.Actor</class>
    <class>peliculasDB.entidad.Critico</class>
    <class>peliculasDB.entidad.Director</class>
    <class>peliculasDB.entidad.Genero</class>
    <class>peliculasDB.entidad.Pelicula</class>
    <class>peliculasDB.entidad.Resenia</class>
    <class>peliculasDB.entidad.RespuestaResenia</class>
    <class>peliculasDB.entidad.Usuario</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
